@using PokemonRoster.Client;
@model IEnumerable<UserPokemon>

<form asp-controller="Poke" asp-action="Index" class="border border-dark rounded-2 bg-dark border-3  m-3 p-3">
   <div>
        <label class="form-label text-danger"><h2>Pokemon Name</h2></label>
        <input class="form-control" name="pokemon" required="" />
        <button class="btn btn-info m-3"type="submit" value="search">Search Pokemon</button>
    </div>
</form>
<div class=" d-inline-flex flex flex-wrap justify-content-around align-content-around ">

@foreach (UserPokemon x in Model)
{
  <div class=" d-inline-flex flex card-container flex-fill">
     <div class=" card rcard border-dark m-3 shadow-lg">
        <div class="card-header">
                    <h3>@char.ToUpper(@x.name[0])@x.name.Substring(1) </h3>
                </div>
        <div class="card-body">
            <img src="@x.sprite" />
            <p>@x.id</p>
        </div>
        <div class="card-footer ">
            <form asp-controller="Poke" asp-action="RemoveFromRoster">
                <button class="btn btn-outline-warning btn-danger" name="remove" value="@x.name" type="submit" >Remove</button>
            </form>
        </div>
        <div>
            <form asp-controller="Poke" asp-action="Info">
                <button class="btn btn-outline-dark btn-info m-2 p-2" name="pokemonName" value="@x.name" type="submit"> Check Info</button>
            </form>
        </div>
     </div>
  </div>
}
    <div class="scroll-animation">
        <h1>Scroll Down</h1>
    </div>
</div>